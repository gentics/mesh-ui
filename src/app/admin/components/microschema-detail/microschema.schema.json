{
    "definitions": {
        "baseField": {
            "type": "object",
            "id": "urn:jsonschema:com:gentics:mesh:core:rest:schema:FieldSchema",
            "required": [
                "name",
                "type"
            ],
            "properties": {
                "name": {
                    "type": "string",
                    "pattern": "^[0-9a-zA-Z_]+$",
                    "description": "Name of the field."
                },
                "label": {
                    "type": "string",
                    "description": "Label of the field."
                },
                "required": {
                    "type": "boolean"
                }
            }
        },
        "simpleField": {
            "allOf": [
                {
                    "$ref": "#/definitions/baseField"
                },
                {
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "number",
                                "date",
                                "boolean",
                                "html"
                            ],
                            "description": "Type of the field."
                        }
                    }
                }
            ]
        },
        "stringField": {
            "allOf": [
                {
                    "$ref": "#/definitions/baseField"
                },
                {
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "string"
                            ],
                            "description": "Type of the field."
                        },
                        "allow": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "description": "Allowed strings."
                        }
                    }
                }
            ]
        },
        "binaryField": {
            "allOf": [
                {
                    "$ref": "#/definitions/baseField"
                },
                {
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "binary"
                            ],
                            "description": "Type of the field."
                        },
                        "allow": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "description": "Allowed mimetypes."
                        }
                    }
                }
            ]
        },
        "nodeField": {
            "allOf": [
                {
                    "$ref": "#/definitions/baseField"
                },
                {
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "node"
                            ],
                            "description": "Type of the field."
                        },
                        "allow": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "description": "Allowed schemas."
                        }
                    }
                }
            ]
        },
        "listField": {
            "allOf": [
                {
                    "$ref": "#/definitions/baseField"
                },
                {
                    "required": ["listType"],
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "list"
                            ],
                            "description": "Type of the field."
                        },
                        "listType": {
                            "type": "string",
                            "enum": [
                                "number",
                                "date",
                                "boolean",
                                "html",
                                "string",
                                "binary"
                            ],
                            "description": "Type of the list elements."
                        }
                    }
                }
            ]
        },
        "nodeListField": {
            "allOf": [
                {
                    "$ref": "#/definitions/baseField"
                },
                {
                    "required": ["listType"],
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "list"
                            ],
                            "description": "Type of the field."
                        },
                        "allow": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "description": "List of allowed schemas (Only applies to node lists)."
                        },
                        "listType": {
                            "type": "string",
                            "enum": [
                                "node"
                            ],
                            "description": "Type of the list elements."
                        }
                    }
                }
            ]
        },
        "field": {
            "oneOf": [
                {
                    "$ref": "#/definitions/simpleField"
                },
                {
                    "$ref": "#/definitions/stringField"
                },
                {
                    "$ref": "#/definitions/binaryField"
                },
                {
                    "$ref": "#/definitions/listField"
                },
                {
                    "$ref": "#/definitions/nodeField"
                },
                {
                    "$ref": "#/definitions/nodeListField"
                }
            ]
        }
    },
    "type": "object",
    "id": "urn:jsonschema:com:gentics:mesh:core:rest:microschema:impl:MicroschemaUpdateRequest",
    "required":[
        "name",
        "fields"
    ],
    "properties": {
        "name": {
            "type": "string",
            "description": "Name of the microschema"
        },
        "description": {
            "type": "string",
            "description": "Description of the microschema"
        },
        "fields": {
            "type": "array",
            "minItems": 1,
            "description": "List of microschema fields",
            "items": {
                "$ref": "#/definitions/field"
            }
        }
    }
}
